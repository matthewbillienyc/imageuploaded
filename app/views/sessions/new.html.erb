<div class="row">
  <div class="col-xs-6">
    <%= form_for :session, url: login_path, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'col-lg-2' %>
        <%= f.text_field :email, class: 'col-lg-10' %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'col-lg-2' %>
        <%= f.password_field :password, class: 'col-lg-2' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'col-lg-offset-2 btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
