<div class="row">
  <div class="col-xs-6">
    <%= form_for @image, html: {class: 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.label :image, class: 'col-lg-2' %>
        <%= f.file_field :image, class: 'col-lg-10' %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-lg-2' %>
        <%= f.text_field :description, class: 'col-lg-10' %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'col-lg-offset-2 btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
